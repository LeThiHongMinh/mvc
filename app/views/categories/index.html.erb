<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div>
  <div>
    <%= link_to 'New Category', new_category_path %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.category, category %></td>
    <td>
      <div>
        <%= link_to 'View Category', category %>
        <%= link_to 'Edit Category', edit_category_path(category)%>
        <%= link_to 'Delete', category_path(category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
      </div>
    </td>
  </tr>
<% end %>
  </tbody>

</table>